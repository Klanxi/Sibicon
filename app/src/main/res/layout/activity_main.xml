<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="656dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:outlineAmbientShadowColor="@color/colorBtnLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966">

        <ImageButton
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_one" />

        <ImageButton
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="450sp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_four" />

        <ImageButton
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_seven" />


        <ImageButton
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_two" />

        <ImageButton
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_five" />

        <ImageButton
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_eight" />

        <ImageButton
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"

            android:layout_marginStart="295dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_three" />

        <ImageButton
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="295dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_six" />

        <ImageButton
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="295dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/border_btn"
            android:focusableInTouchMode="true"
            android:scaleType="center"
            android:src="@drawable/ic_nine" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="160dp"
            android:background="@drawable/border_btn"
            app:srcCompat="@drawable/ic_one" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>